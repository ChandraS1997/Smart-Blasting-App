        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/holeParaLay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintBottom_toTopOf="@+id/bottom_hole_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_host_hole"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/hole_parameteres_layout"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/project_info_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintBottom_toTopOf="@+id/bottom_hole_navigation"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nav_host_hole"
            app:layout_constraintTop_toTopOf="parent">
            <include
                layout="@layout/project_info_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

      <!--  <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="project_info_container,holeParaLay" />-->

        <fragment
            android:id="@+id/nav_host_hole"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintBottom_toTopOf="@+id/bottom_hole_navigation"
            app:layout_constraintEnd_toStartOf="@id/holeParaLay"
            app:layout_constraintStart_toEndOf="@+id/project_info_container"
            app:layout_constraintTop_toBottomOf="@+id/header_lay_hole"
            app:navGraph="@navigation/hole_nav" />

        <include
            android:id="@+id/bottom_hole_navigation"
            layout="@layout/bottom_hole_navigation"
            app:layout_constraintTop_toBottomOf="@+id/holeParaLay"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>