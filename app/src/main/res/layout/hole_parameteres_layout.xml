<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rightlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/head_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/_FFA722"
                    android:elevation="@dimen/_3sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/holeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:text="Hole Parameters"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fillViewport="true"
                    app:layout_constraintBottom_toTopOf="@+id/saveProceedBtn"
                    app:layout_constraintTop_toBottomOf="@id/head_lay">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/middle_row_parameter_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/_E1E2E6">

                        <TextView
                            android:id="@+id/NameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/NameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="45"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/NameTitle" />


                        <View
                            android:id="@+id/viewLineName"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/NameTv" />


                        <TextView
                            android:id="@+id/holeStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="@string/hole_status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineName" />

                        <TextView
                            android:id="@+id/holeStatusTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="ding"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/holeStatusTitle" />


                        <View
                            android:id="@+id/viewLineHoleStatus"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/holeStatusTv" />


                        <TextView
                            android:id="@+id/depthTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="Depth"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineHoleStatus" />

                        <TextView
                            android:id="@+id/depthTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="55"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/depthTitle" />


                        <View
                            android:id="@+id/viewLineDepth"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/depthTv" />


                        <TextView
                            android:id="@+id/angleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="Angle"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineDepth" />

                        <TextView
                            android:id="@+id/angleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="90"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/angleTitle" />


                        <View
                            android:id="@+id/viewLineAngle"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/angleTv" />


                        <TextView
                            android:id="@+id/deviationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="@string/deviation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineAngle" />

                        <TextView
                            android:id="@+id/deviationTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/deviationTitle" />


                        <View
                            android:id="@+id/viewLineDeviation"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/angleTv" />


                        <TextView
                            android:id="@+id/diameterTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="@string/deviation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineAngle" />

                        <TextView
                            android:id="@+id/diameterTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_bold"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/diameterTitle" />


                        <View
                            android:id="@+id/viewLineDiameter"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/diameterTv" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <Button
                    android:id="@+id/saveProceedBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/_FFA722"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/save_and_proceed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>